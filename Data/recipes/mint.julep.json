{
  "id": "mint_julep_classic",
  "name": "Mint Julep",
  "base": "Bourbon",
  "style": "Smash / Julep",
  "flavors": [
    "minty",
    "refreshing",
    "sweet",
    "spirit-forward"
  ],
  "abv": 25.0,
  "ice": "Build over crushed ice",
  "ingredients": [
    { "name": "Bourbon whiskey", "amount": 2.5, "unit": "oz" },
